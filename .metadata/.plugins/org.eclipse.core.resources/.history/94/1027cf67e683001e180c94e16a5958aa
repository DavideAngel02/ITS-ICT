package EserciziITS01;

import java.util.Scanner; 

public class Prova {

	public static void main(String[] args) {
		
//		if (Condizione) {
//			//caso positivo
//		} else {
//			//caso negativo
//		}
		Scanner elemento = new Scanner(System.in); 
		
		int i = 0; 
		float somma = 0f;
		while (i < 5) {
			System.out.println("Inserisci il " + (i+1) +  " numero");
			float numero = elemento.nextFloat();
			somma = somma + numero;
			i++; 		
		}
		float media = somma / 5; 
		System.out.println("la media Ã¨ " + media);
	}

}
